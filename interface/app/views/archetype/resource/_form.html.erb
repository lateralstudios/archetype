<div class="row">
  <%= simple_nested_form_for resourceful.resource.form_object do |f| %>
    <div class="col-md-2">
      <div data-spy="affix" data-offset-top="0" data-offset-bottom="0">
        <%= link_to 'Back', resource_class, class: 'btn btn-block btn-default' %>
        <%= f.submit 'Save', class: 'btn btn-block btn-primary margin-bottom' %>

        <div class="box box-solid">
          <div class="box-header with-border">
            <h3 class="box-title">Sections</h3>
          </div>
          <div class="box-body no-padding spy-target">
            <ul class="nav nav-pills nav-stacked">
              <% attributes.fieldsets(context).each do |fieldset| %>
                <li><a href="#fieldset_<%= fieldset.name %>"><%= fieldset.label %></a></li>
              <% end %>
            </ul>
          </div><!-- /.box-body -->
        </div>
      </div>
    </div>

    <div class="col-md-10">
      <%= render partial: 'fieldset', collection: attributes.fieldsets(context), locals: {f: f, context: context} %>
      <div class="box">
        <div class="box-body clearfix">
          <div class='pull-right'>
            <%= link_to 'Back', resource_class, class: 'btn btn-sm btn-default' %>
            <%= f.submit 'Save', class: 'btn btn-sm btn-primary' %>
          </div>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  <% end %>
</div>
